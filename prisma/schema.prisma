generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  UP
  DOWN
  PAUSE
}

model MonitorData {
  id            Int         @id @default(autoincrement())
  monitor       Monitor     @relation(fields: [monitorId], references: [id])
  monitorId     Int
  responseTime  Int
  createdAt     DateTime @default(now())
}

model Monitor {
  id            Int      @id @default(autoincrement())
  name          String
  url           String
  frequency     Int
  status        Status   @default(UP)
  user          User     @relation(fields: [userId], references: [id])
  userId        Int
  monitorData   MonitorData[]
  checkAt       DateTime 
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum Plan {
  free
  pro
}

enum ChannelType {
  email
  telegram
}

model Chanel {
  id          Int      @id @default(autoincrement())
  value       String   
  type        ChannelType
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
}

model User {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String   @unique
  password    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  plan        Plan     @default(free)
  channels    Chanel[]
  monitors    Monitor[]
}
